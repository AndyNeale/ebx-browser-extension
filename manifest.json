{
  "manifest_version": 2,

  "name": "Schedule with Echobox",
  "description": "This extension allows the current page to be scheduled using Echobox",
  "version": "1.0",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "activeTab",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action": {
    "default_icon": "icons/icon-16.png",
    "default_popup": "popup.html",
    "default_title": "Schedule with Echobox"
  }
}
